# ============================================
# OnClicks Policy Manager - Environment Variables
# ============================================
# Rename this file to .env and fill in your values
# ============================================

# ================== FIREBASE ==================
# Get these from Firebase Console > Project Settings > Your apps > Web app
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ================== RAZORPAY ==================
# Get these from Razorpay Dashboard > Settings > API Keys
# Use rzp_test_ keys for testing, rzp_live_ for production
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# Backend URL (for local development, use localhost:3000)
VITE_BACKEND_URL=http://localhost:3000

# ================== N8N WEBHOOKS ==================
# Optional: n8n webhook URLs for automation
# Leave empty if not using n8n automation

# PDF AI Extraction webhook
VITE_N8N_WEBHOOK_URL=

# Subscription creation webhook
VITE_N8N_SUBSCRIPTION_WEBHOOK_URL=
